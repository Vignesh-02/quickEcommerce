# Database (Neon PostgreSQL - use connection string from Neon dashboard)
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Better Auth (generate secret: openssl rand -base64 32)
BETTER_AUTH_SECRET=your-secret-key-at-least-32-chars
# For Vercel: set to https://your-app.vercel.app (or use VERCEL_URL in code)
BETTER_AUTH_URL=http://localhost:3000

# Optional: Google OAuth (Sign in with Google)
# Create OAuth client at https://console.cloud.google.com/apis/credentials
# Redirect URI: {BETTER_AUTH_URL}/api/auth/callback/google
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# Optional: Facebook OAuth (Sign in with Facebook)
# Create app at https://developers.facebook.com/apps. Add Facebook Login product, set Valid OAuth Redirect URI: {BETTER_AUTH_URL}/api/auth/callback/facebook
# FACEBOOK_CLIENT_ID=
# FACEBOOK_CLIENT_SECRET=

# Stripe (from Stripe dashboard)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
